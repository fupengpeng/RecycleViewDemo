<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ListView
        android:id="@+id/lv_aty_classify_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <LinearLayout
        android:id="@+id/ll_aty_classify_lv_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_aty_classify_lv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_aty_classify_lv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_aty_classify_lv_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_aty_classify_lv_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_light_blue"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
